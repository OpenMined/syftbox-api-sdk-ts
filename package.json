{
  "name": "@syftbox/api-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for SyftBox API - secure data collaboration platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types && npm run build:browser",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist",
    "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir dist --declaration false --declarationMap false && mv dist/index.js dist/index.mjs",
    "build:types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "build:browser": "npm run build:browser:bundle",
    "build:browser:bundle": "bunx esbuild src/index.ts --bundle --outfile=dist/syftbox.umd.js --format=iife --global-name=SyftBoxClient --platform=browser --target=es2020 --minify",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "syftbox",
    "api",
    "sdk",
    "typescript",
    "client",
    "data-collaboration",
    "secure-computation"
  ],
  "author": "SyftBox Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/syftbox/syftbox-api-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/syftbox/syftbox-api-sdk/issues"
  },
  "homepage": "https://github.com/syftbox/syftbox-api-sdk#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {},
  "peerDependencies": {},
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}